{
	"$ref": "#/definitions/projectSchema",
	"definitions": {
		"projectSchema": {
			"type": "object",
			"properties": {
				"$schema": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"subtitle": {
					"type": "string"
				},
				"authors": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"main": {
								"type": "boolean",
								"default": false
							},
							"role": {
								"type": "string"
							}
						},
						"required": ["name", "role"],
						"additionalProperties": false
					}
				},
				"versions": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"v": {
								"type": "string"
							},
							"download": {
								"type": "string",
								"format": "uri"
							},
							"changes": {
								"type": "string"
							},
							"modified": {
								"type": "string",
								"format": "date-time"
							}
						},
						"required": ["v", "download", "modified"],
						"additionalProperties": false
					}
				},
				"id": {
					"type": "string",
					"pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
				},
				"images": {
					"type": "object",
					"properties": {
						"icon": {
							"type": "string",
							"format": "uri"
						},
						"banner": {
							"type": "string",
							"format": "uri"
						}
					},
					"required": ["icon", "banner"],
					"additionalProperties": false
				},
				"updated": {
					"type": "string",
					"format": "date-time"
				}
			},
			"required": ["name", "description", "subtitle", "authors", "versions", "id", "images", "updated"],
			"additionalProperties": false,
			"description": "fnf-manager project schema"
		}
	},
	"$schema": "http://json-schema.org/draft-07/schema#"
}
