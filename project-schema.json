{
  "$ref": "#/definitions/projectSchema",
  "definitions": {
    "projectSchema": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "main": {
                "type": "boolean"
              },
              "role": {
                "type": "string"
              },
              "sidehide": {
                "type": "boolean"
              }
            },
            "required": [
              "name",
              "role"
            ],
            "additionalProperties": false
          }
        },
        "platforms": {
          "type": "string",
          "enum": [
            "linux",
            "windows"
          ]
        },
        "versions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "v": {
                "type": "string"
              },
              "win": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "filename": {
                    "type": "string"
                  },
                  "hash": {
                    "type": "string",
                    "pattern": "^[a-f0-9]{128}$"
                  }
                },
                "required": [
                  "url",
                  "filename",
                  "hash"
                ],
                "additionalProperties": false
              },
              "linux": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "filename": {
                    "type": "string"
                  },
                  "hash": {
                    "type": "string",
                    "pattern": "^[a-f0-9]{128}$"
                  }
                },
                "required": [
                  "url",
                  "filename",
                  "hash"
                ],
                "additionalProperties": false
              },
              "changes": {
                "type": "string"
              },
              "default": {
                "type": "boolean",
                "default": false
              },
              "modified": {
                "type": "string",
                "format": "date-time"
              },
              "platform": {
                "type": "string",
                "enum": [
                  "linux",
                  "windows",
                  "both"
                ]
              },
              "notes": {
                "type": "string"
              }
            },
            "required": [
              "v",
              "modified",
              "platform"
            ],
            "additionalProperties": false
          }
        },
        "id": {
          "type": "string",
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "images": {
          "type": "object",
          "properties": {
            "icon": {
              "type": "string",
              "format": "uri"
            },
            "banner": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "icon",
            "banner"
          ],
          "additionalProperties": false
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "description",
        "subtitle",
        "authors",
        "platforms",
        "versions",
        "id",
        "url",
        "images",
        "updated"
      ],
      "additionalProperties": false,
      "description": "fnf-manager project schema"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}